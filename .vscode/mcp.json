{
    "inputs": [
        {
            "type": "promptString",
            "id": "pg_url",
            "description": "PostgreSQL URL"
        }
    ],
    "servers": {
        "postgres": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-postgres",
                "${input:pg_url}"
            ]
        }
    }
}